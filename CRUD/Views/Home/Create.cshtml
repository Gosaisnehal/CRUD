@model tbl_Contacts

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Enter your contact details here.</h2>
<br />
<br />
@using (Html.BeginForm("Create", "Home", FormMethod.Post, new { @class = "form-horizontal" }))


{

    <div class="form-group">

        @Html.LabelFor(model => model.firstName, new { @class = "col-md-2 text-right" })

        <div class= "col-md-4">

            @Html.TextBoxFor(model => model.firstName, new { @class = "form-control", @placeholder = "Enter your First Name" })

        </div>
    </div>


    <div class="form-group">

        @Html.LabelFor(model => model.lastName, new { @class = "col-md-2 text-right" })

        <div class="col-md-4">

            @Html.TextBoxFor(model => model.lastName, new { @class = "form-control", @placeholder = "Enter your Last Name" })

        </div>
    </div>

    <div class="form-group">

        @Html.LabelFor(model => model.e_mail, new { @class = "col-md-2 text-right" })

        <div class="col-md-4">

            @Html.TextBoxFor(model => model.e_mail, new { @class = "form-control", @placeholder = "Enter your E-mail" })

        </div>
    </div>

    <div class="form-group">

        @Html.LabelFor(model => model.phoneNo, new { @class = "col-md-2 text-right" })

        <div class="col-md-4">

            @Html.TextBoxFor(model => model.phoneNo, new { @class = "form-control", @placeholder = "Enter your Phone number" })

        </div>
    </div>

    <div class="form-group">

        @Html.LabelFor(model => model.unitNo, new { @class = "col-md-2 text-right" })

        <div class="col-md-4">

            @Html.TextBoxFor(model => model.unitNo, new { @class = "form-control", @placeholder = "Enter your Unit number" })

        </div>
    </div>

    <div class="form-group">

        @Html.LabelFor(model => model.streetNo, new { @class = "col-md-2 text-right" })

        <div class="col-md-4">

            @Html.TextBoxFor(model => model.streetNo, new { @class = "form-control", @placeholder = "Enter your Streer number" })

        </div>
    </div>

    <div class="form-group">

        @Html.LabelFor(model => model.streetName, new { @class = "col-md-2 text-right" })

        <div class="col-md-4">

            @Html.TextBoxFor(model => model.streetName, new { @class = "form-control", @placeholder = "Enter your Street name" })

        </div>
    </div>
    <div class="form-group">

        @Html.LabelFor(model => model.suburb, new { @class = "col-md-2 text-right" })

        <div class="col-md-4">

            @Html.TextBoxFor(model => model.suburb, new { @class = "form-control", @placeholder = "Enter your Suburb" })

        </div>
    </div>

    <div class="form-group">

        @Html.LabelFor(model => model.state, new { @class = "col-md-2 text-right" })

        <div class="col-md-4">

            @Html.TextBoxFor(model => model.state, new { @class = "form-control", @placeholder = "Enter your State" })

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.countryId, new { @class = "col-md-2 text-right" })
        @*< label class= "control "*@
        <div class="col-md-4">
            @* storing the id in the databse and displays the country name on the view*@
            @Html.DropDownListFor(model => model.countryId, ViewBag.CountryList as SelectList, "Select Your Country", new { @class = "form-control" })

        </div>
    </div>



    <div class="form-group">

        @Html.LabelFor(model => model.company, new { @class = "col-md-2 text-right" })

        <div class="col-md-4">

            @Html.TextBoxFor(model => model.company, new { @class = "form-control", @placeholder = "Enter your Company name" })

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
    @*</div>*@
}

<div>
    @Html.ActionLink("Back to List", "Read")
</div>

